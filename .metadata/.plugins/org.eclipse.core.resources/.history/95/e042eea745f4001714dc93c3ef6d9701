package ldcd;


import java.io.BufferedReader;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileReader;

import com.sun.org.apache.bcel.internal.generic.NEW;
 
 
public class jl {
	private static String imm="";
    public static void main(String args[]){
    	
    	jl.rn("","");
    }
    
    public static String  rn(String yhm,String mm){//读取内容
    	
    	if ((yhm+mm)) {
			
		}
    		
    	
    	String rn="";
    	
    	 File file=new File("jl.txt");  
         BufferedReader reader=null;  
         String temp=null;  
         int line=1;  
         try{  
                 reader=new BufferedReader(new FileReader(file));  
                 while((temp=reader.readLine())!=null){  
                	 String lsrn ="客户"+line+":"+temp;
                	rn=rn+lsrn+"\n";
                      
                     line++;  
                 }  
         }  
         catch(Exception e){  
             e.printStackTrace();  
         }  
         finally{  
             if(reader!=null){  
                 try{  
                     reader.close();  
                 }  
                 catch(Exception e){  
                     e.printStackTrace();  
                 }  
             } 
             System.out.println(rn);
            
         } 
         return rn;
         
       
    	
     }  
    	
    
    
    
    
    public static void xr(String nr) {//写入文件
        try {
            FileOutputStream f=new FileOutputStream("jl.txt",true);
            f.write(nr.getBytes());
            f.close();
           
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
    
}
	
