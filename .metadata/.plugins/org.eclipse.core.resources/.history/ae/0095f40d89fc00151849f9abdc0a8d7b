package tank;
import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;
public class Main extends JFrame implements ActionListener{
	Mypanel mb;
	Guanka gk;
	JMenuBar cdl;
	JMenu zcd;
	JMenuItem cda,cdb;
	public static void main(String [] args){
		new Main();
	}
	
	public void actionPerformed(ActionEvent e) {
		if(e.getActionCommand().equals("xyx")){
			this.remove(gk);
			mb=new Mypanel();
			Thread xc=new Thread(mb);
			xc.start();
			add(mb);
			addKeyListener(mb);
		}
		
	}

	Main(){
		gk=new Guanka();
		cdl=new JMenuBar();
		zcd=new JMenu("游戏(G)");
		cda=new JMenuItem("新游戏(N)");cda.addActionListener(this);
		cdb=new JMenuItem("退出游戏(X)");cdb.addActionListener(this);
		cda.setActionCommand("xyx");
		cdb.setActionCommand("tcyx");
		zcd.setMnemonic('G');
		cda.setMnemonic('N');
		cdb.setMnemonic('x');
		zcd.add(cda);zcd.add(cdb);
		cdl.add(zcd);
		add(cdl,BorderLayout.NORTH);
		add(gk);
		Thread xcgk=new Thread(gk);
		xcgk.start();

		setTitle("坦克大战");
		setSize(1200,725);
		setLocation(222,122);
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
}
